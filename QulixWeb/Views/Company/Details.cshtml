@model Company

@{
    ViewBag.Title = "Company details";
}

<div class="card">
    <div class="card-header">
        <h3>Company details</h3>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover">
            <tr>
                <th>Id</th>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>
                    @Model.Name
                </td>
            </tr>
            <tr>
                <th>OrganizationalForm</th>
                <td>@Model.OrganizationalForm.Name</td>
            </tr>
        </table>
    </div>
    <div class="card-footer">
        <a asp-action="List" class="btn btn-secondary">List of companies</a>
    </div>
</div>