@model Worker

@{
    ViewBag.Title = "Worker info";
}

<div class="card">
    <div class="card-header">
        <h3>Worker info</h3>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover">
            <tr>
                <th>Id</th>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>
                    @Model.GetFullName()
                </td>
            </tr>
            <tr>
                <th>Employment Date</th>
                <td>@Model.GetEmploymentDate()</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>@Model.Position.Name</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>@Model.Company.OrganizationalForm.Name @Model.Company.Name</td>
            </tr>
        </table>
    </div>
    <div class="card-footer">
        <a asp-action="List" class="btn btn-secondary">List of workers</a>
    </div>
</div>